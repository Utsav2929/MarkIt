<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:layout_marginLeft="0dp"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >

    <TextView
        android:layout_width="159dp"
        android:layout_height="98dp"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="130dp"
        android:background="#000000"
        android:backgroundTint="#222831"
        android:fontFamily="cursive"
        android:rotationX="25"
        android:text="Mark IT"
        android:textColor="#EEEEEE"
        android:textSize="40sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="vertical"

        >

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00FFF5"
            android:text="Login "
            app:cornerRadius="20sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="430dp" />

        <Button
            android:id="@+id/elogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#00FFF5"
            android:text="Login For Employee "
            app:cornerRadius="20sp"
            tools:layout_editor_absoluteX="152dp"
            tools:layout_editor_absoluteY="430dp" />

        <Button
            android:id="@+id/registerC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:backgroundTint="#00FFF5"
            android:text="Register your Company"
            app:cornerRadius="20sp"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="493dp" />
    </LinearLayout>


</LinearLayout>