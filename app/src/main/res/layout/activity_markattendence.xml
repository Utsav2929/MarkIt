<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:backgroundTint="#222831"
    tools:context=".markattendence">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ADB5"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="211dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="282dp">

            <TextView
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="#393E46"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/date"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_weight="1"
                android:contentDescription="@string/name"
                android:ems="10"
                android:hint="DD-MM-YYYY"
                android:inputType="date"
                android:textColor="#EEEEEE"
                android:visibility="visible"
                tools:ignore="EditableContentDescCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="282dp">

            <TextView
                android:id="@+id/cname"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                android:textColor="#393E46"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cnameentry"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_weight="1"
                android:contentDescription="@string/name"
                android:ems="10"
                android:hint="user Name"
                android:inputType="textEmailAddress"
                android:textColor="#EEEEEE"
                android:visibility="visible"
                tools:ignore="EditableContentDescCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="282dp">

            <TextView
                android:id="@+id/cnam"
                android:layout_width="155dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Late"
                android:textColor="#393E46"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/late"
                android:layout_width="273dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40sp"
                android:layout_weight="1"
                android:contentDescription="@string/name"
                android:ems="10"
                android:hint="Late in Minute"
                android:inputType="textEmailAddress"
                android:textColor="#EEEEEE"
                android:visibility="visible"
                tools:ignore="EditableContentDescCheck" />
        </LinearLayout>
        <Button
            android:id="@+id/submitbutton"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:backgroundTint="#00FFF5"
            android:text="Full Day"
            android:textColor="#393E46"
            app:cornerRadius="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.349" />
        <Button
            android:id="@+id/submitbutton2"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:backgroundTint="#00FFF5"
            android:text="Half Day"
            android:textColor="#393E46"
            app:cornerRadius="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.349" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>